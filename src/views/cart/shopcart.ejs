<!--================ Shoping Cart Part HTML Start ======================-->

<section id="shoping-cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 table-area">
                <table>
                    <thead>
                        <tr>
                            <th>Remove</th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>

                    <tbody>
                            <% if(products) { %>
                                <% for(var i = 0; i < products.length; i++) { %>
                        <tr>
                            <td>
                                <a class="trash" href="/remove/<%= products[i].item._id %>"><i class="fas fa-trash-alt"></i></a>
                            </td>
                          
                            <td class="cart-content">
                                <div class="cart-item">
                                    <img src="<%= products[i].item.image %>" class="img-fluid" alt="product1">
                                </div>
                                <div class="content">
                                    <h3><%= products[i].item.title %></h3>
                                    <ul>
                                        <li><a href="#"><i class="fas fa-star"></i></a></li>
                                        <li><a href="#"><i class="fas fa-star"></i></a></li>
                                        <li><a href="#"><i class="fas fa-star"></i></a></li>
                                        <li><a href="#"><i class="fas fa-star"></i></a></li>
                                        <li><a href="#"><i class="fas fa-star"></i></a></li>
                                    </ul>
                                    <h3 class="weight">Weight: 500 gm</h3>
                                </div>
                            </td>
                            <td>$ <%= products[i].price %></td>
                            <td>
                                <a href="/sumar/<%= products[i].item._id %>" class="btn btn-black mx-1">+</a>
                                <%= products[i].qty %>
                                <a href="/reduce/<%= products[i].item._id %>" class="btn btn-black mx-1">-</a>

                            </td>
                            <td>$ 99.00</td>
           
                        </tr>
                        
                        <tr>
                            <% } %>   
                                       

                                <td>
                                        <a class="trash" href="#"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                    <td class="cart-content">
                                        <div class="cart-item">
                                            <img src="images/shoping-cart/product2.png" class="img-fluid" alt="product1">
                                        </div>
                                        <div class="content">
                                            <h3>Bella Warm Cream</h3>
                                            <ul>
                                                <li><a href="#"><i class="fas fa-star"></i></a></li>
                                                <li><a href="#"><i class="fas fa-star"></i></a></li>
                                                <li><a href="#"><i class="fas fa-star"></i></a></li>
                                                <li><a href="#"><i class="fas fa-star"></i></a></li>
                                                <li><a href="#"><i class="fas fa-star"></i></a></li>
                                            </ul>
                                            <h3 class="weight">Weight: 500 gm</h3>
                                        </div>
                                    </td>
                                    <td>$ 99.00</td>
                                    <td>01</td>
                                    <td>$ 99.00</td>
                                </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-3 cupon-area ph-btn">
                <h4>Have a Coupon ?</h4>
                <form>
                    <input type="text" class="code" placeholder="Enter Your Code">
                    <button type="submit"><i class="fas fa-paper-plane"></i></button>
                </form>
                <h4 class="cart-total">Cart Total</h4>
                <ul>
                    <li>Cart Subtotal <span>$ 297.00</span></li>
                    <li>Shipping <span>Free Shipping</span></li>
                    <li>Grand Total <span>$ <%= totalPrice %></span></li>
                </ul>
                
                            <% } else { %>                    
    
                                <% } %> 
                <div class="noor2">
                    <a href="/prepagar" class="abs-reflect">Iniciar Compra</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!--================ Shoping Cart Part HTML End ======================-->





